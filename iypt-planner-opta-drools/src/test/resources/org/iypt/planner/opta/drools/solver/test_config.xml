<?xml version="1.0" encoding="UTF-8"?>
<solver>
  <environmentMode>FAST_ASSERT</environmentMode>
  <!--<environmentMode>FULL_ASSERT</environmentMode>-->

  <!-- Domain model configuration -->
  <solutionClass>org.iypt.planner.opta.drools.domain.Tournament</solutionClass>
  <entityClass>org.iypt.planner.opta.drools.domain.VotingSeat</entityClass>
  <entityClass>org.iypt.planner.opta.drools.domain.NonVotingSeat</entityClass>

  <!-- Score configuration -->
  <scoreDirectorFactory>
    <scoreDefinitionType>HARD_SOFT</scoreDefinitionType>
    <scoreDrl>org/iypt/planner/opta/drools/solver/score_rules.drl</scoreDrl>
  </scoreDirectorFactory>

  <!-- Optimization algorithms configuration -->
  <termination>
  </termination>

  <constructionHeuristic>
    <queuedEntityPlacer>
      <entitySelector id="placerEntitySelector1">
        <cacheType>PHASE</cacheType>
        <entityClass>org.iypt.planner.opta.drools.domain.VotingSeat</entityClass>
      </entitySelector>
      <changeMoveSelector>
        <entitySelector mimicSelectorRef="placerEntitySelector1"/>
      </changeMoveSelector>
    </queuedEntityPlacer>
  </constructionHeuristic>

  <constructionHeuristic>
    <queuedEntityPlacer>
      <entitySelector id="placerEntitySelector2">
        <cacheType>PHASE</cacheType>
        <entityClass>org.iypt.planner.opta.drools.domain.NonVotingSeat</entityClass>
      </entitySelector>
      <changeMoveSelector>
        <entitySelector mimicSelectorRef="placerEntitySelector2"/>
      </changeMoveSelector>
    </queuedEntityPlacer>
  </constructionHeuristic>

  <localSearch>
    <termination>
      <terminationCompositionStyle>OR</terminationCompositionStyle>
      <secondsSpentLimit>60</secondsSpentLimit>
      <!--<unimprovedStepCountLimit>200</unimprovedStepCountLimit>-->
      <bestScoreLimit>0hard/-10000soft</bestScoreLimit>
    </termination>
    <unionMoveSelector>
      <changeMoveSelector>
        <entitySelector>
          <entityClass>org.iypt.planner.opta.drools.domain.VotingSeat</entityClass>
        </entitySelector>
        <fixedProbabilityWeight>4.0</fixedProbabilityWeight>
      </changeMoveSelector>
      <swapMoveSelector>
        <entitySelector>
          <entityClass>org.iypt.planner.opta.drools.domain.VotingSeat</entityClass>
        </entitySelector>
        <fixedProbabilityWeight>1.0</fixedProbabilityWeight>
      </swapMoveSelector>
      <changeMoveSelector>
        <entitySelector>
          <entityClass>org.iypt.planner.opta.drools.domain.NonVotingSeat</entityClass>
        </entitySelector>
        <fixedProbabilityWeight>1.0</fixedProbabilityWeight>
      </changeMoveSelector>
      <swapMoveSelector>
        <entitySelector>
          <entityClass>org.iypt.planner.opta.drools.domain.NonVotingSeat</entityClass>
        </entitySelector>
        <fixedProbabilityWeight>1.0</fixedProbabilityWeight>
      </swapMoveSelector>
    </unionMoveSelector>
    <acceptor>
      <entityTabuSize>7</entityTabuSize>
    </acceptor>
    <forager>
      <acceptedCountLimit>100</acceptedCountLimit>
      <pickEarlyType>FIRST_BEST_SCORE_IMPROVING</pickEarlyType>
    </forager>
  </localSearch>
</solver>