<?xml version="1.0" encoding="UTF-8"?>
<solver>
  <environmentMode>DEBUG</environmentMode>
  <!--<environmentMode>TRACE</environmentMode>-->

  <!-- Domain model configuration -->
  <solutionClass>org.iypt.planner.domain.Tournament</solutionClass>
  <planningEntityClass>org.iypt.planner.domain.JurySeat</planningEntityClass>

  <!-- Score configuration -->
  <scoreDirectorFactory>
    <scoreDefinitionType>HARD_AND_SOFT</scoreDefinitionType>
    <scoreDrl>/org/iypt/planner/solver/score_rules.drl</scoreDrl>
  </scoreDirectorFactory>

  <!-- Optimization algorithms configuration -->
  <termination>
  </termination>
  <constructionHeuristic>
    <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
  </constructionHeuristic>
  <localSearch>
    <termination>
      <terminationCompositionStyle>OR</terminationCompositionStyle>
      <maximumSecondsSpend>60</maximumSecondsSpend>
      <!--<maximumUnimprovedStepCount>200</maximumUnimprovedStepCount>-->
      <scoreAttained>0hard/-10000soft</scoreAttained>
    </termination>
    <unionMoveSelector>
      <changeMoveSelector>
        <fixedProbabilityWeight>4.0</fixedProbabilityWeight>
      </changeMoveSelector>
      <swapMoveSelector>
        <fixedProbabilityWeight>1.0</fixedProbabilityWeight>
      </swapMoveSelector>
    </unionMoveSelector>
    <acceptor>
    </acceptor>
    <forager>
      <minimalAcceptedSelection>100</minimalAcceptedSelection>
      <pickEarlyType>FIRST_BEST_SCORE_IMPROVING</pickEarlyType>
    </forager>
  </localSearch>
</solver>